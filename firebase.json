{
    "functions": {
        "source": "functions",
        "codebase": "default",
        "ignore": [
            "node_modules",
            ".git",
            "firebase-debug.log",
            "firebase-debug.log.*"
        ],
        "predeploy": [
            "npm --prefix \"$RESOURCE_DIR\" run build"
        ]
    },
    "emulators": {
        "functions": {
            "port": 5001,
            "host": "0.0.0.0"
        },
        "firestore": {
            "port": 8080,
            "host": "0.0.0.0"
        },
        "ui": {
            "enabled": true
        }
    },
    "firestore": {
        "rules": "firestore.rules"
    },
    "storage": {
        "rules": "storage.rules"
    }
}